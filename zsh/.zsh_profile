#!/usr/bin/env zsh

# Remapping the caps to control
# setxkbmap -option caps:ctrl_modifier

addToPath() {
    if [[ "$PATH" != *"$1"* ]]; then
        export PATH=$PATH:$1
    fi
}

export PYENV_ROOT="$HOME/.pyenv"
[[ -d $PYENV_ROOT/bin ]] && export PATH="$PYENV_ROOT/bin:$PATH"
eval "$(pyenv init -)"

export PATH="$PATH:$HOME/.foundry/bin"
export PATH="$PATH:$HOME/.cargo/bin" 

export ASDF_DATA_DIR="$HOME/.asdf"
export PATH="$ASDF_DATA_DIR/shims:$PATH"

export PATH="$PATH:$HOME/dependencies/flutter/bin"

bindkey -v

# export LANG=en_US.UTF-8
# export LC_ALL=en_US.UTF-8
# export LC_COLLATE=en_IN.UTF-8
# export LC_CTYPE=en_IN.UTF-8
# export LC_MESSAGES=en_IN.UTF-8
# export LC_MONETARY=en_IN.UTF-8
# export LC_NUMERIC=en_IN.UTF-8
# export LC_TIME=en_IN.UTF-8

# Where should I put you?
bindkey -s ^f "tmux-sessionizer\n"


# zsh
source <(fzf --zsh)

export AWS_DEFAULT_PROFILE=default-mfa
export PATH="$PATH:$HOME/.local/bin"

# LLVM/MLIR configuration
export LIBRARY_PATH=/opt/homebrew/lib
LLVM_PREFIX="$(brew --prefix llvm@19)"
export MLIR_SYS_190_PREFIX="$LLVM_PREFIX"
export LLVM_SYS_191_PREFIX="$LLVM_PREFIX"
export TABLEGEN_190_PREFIX="$LLVM_PREFIX"


